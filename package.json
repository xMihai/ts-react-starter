{
  "name": "ts-react-starter",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "immutability-helper": "^2.7.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "@types/redux-actions": "^2.3.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "tslint-immutable": "^4.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack --mode production",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "@@store/(.*)": "<rootDir>/src/store/$1"
    }
  }
}
